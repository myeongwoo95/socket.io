doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/public/css/mvp.css")
    title Document
  body 
    header
      h1 it works!

      main
        div#welcome
          form
            input(placeholder="room name", required, type="text")
            button Join / Create Room
          h4 public Rooms:
          ul  
            each roomName in publicRooms
              li= roomName
        div#room
          h3 
          ul
          form#name
            input(placeholder="nickname...", required, type="text")
            button Save
          form#message
            input(placeholder="message...", required, type="text")
            button Send
            
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js") 
    